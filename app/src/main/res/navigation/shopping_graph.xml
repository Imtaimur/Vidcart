<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shopping_graph"
    app:startDestination="@id/homefragmet">

    <fragment
        android:id="@+id/homefragmet"
        android:name="com.example.shopit.fragments.shopping.homefragmet"
        android:label="homefragmet"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homefragmet_to_productdetailfragment3"
            app:destination="@id/productdetailfragment" />
    </fragment>
    <fragment
        android:id="@+id/searchfragmet"
        android:name="com.example.shopit.fragments.shopping.searchfragmet"
        android:label="searchfragmet"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchfragmet_to_productdetailfragment3"
            app:destination="@id/productdetailfragment" />
    </fragment>
    <fragment
        android:id="@+id/cartfragmet"
        android:name="com.example.shopit.fragments.shopping.cartfragmet"
        android:label="cartfragmet"
        tools:layout="@layout/fragment_cart">
        <action
            android:id="@+id/action_cartfragmet_to_productdetailfragment2"
            app:destination="@id/productdetailfragment" />
        <action
            android:id="@+id/action_cartfragmet_to_addresFragment"
            app:destination="@id/addresFragment" />
    </fragment>
    <fragment
        android:id="@+id/profilefragmet"
        android:name="com.example.shopit.fragments.shopping.profilefragmet"
        android:label="profilefragmet"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profilefragmet_to_addresFragment"
            app:destination="@id/addresFragment" />
        <action
            android:id="@+id/action_profilefragmet_to_userAccountFragment"
            app:destination="@id/userAccountFragment" />
        <action
            android:id="@+id/action_profilefragmet_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>
    <fragment
        android:id="@+id/productdetailfragment"
        android:name="com.example.shopit.fragments.shopping.productdetailfragment"
        android:label="productdetailfragment"
        tools:layout="@layout/fragmetn_product_detail">
        <argument
            android:name="product"
            app:argType="com.example.shopit.data.Product" />
    </fragment>
    <fragment
        android:id="@+id/addresFragment"
        android:name="com.example.shopit.fragments.shopping.AddresFragment"
        android:label="AddresFragment"
        tools:layout="@layout/fragment_address"/>
    <fragment
        android:id="@+id/userAccountFragment"
        android:name="com.example.shopit.fragments.settings.UserAccountFragment"
        android:label="UserAccountFragment"
        tools:layout="@layout/fragment_user_account"/>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.example.shopit.fragments.settings.OrderFragment"
        android:label="OrderFragment"
        tools:layout="@layout/fragment_orders"/>
</navigation>